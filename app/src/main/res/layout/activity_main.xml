<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    android:layout_width="250dp" android:layout_height="match_parent"
    android:layout_gravity="center_horizontal" android:orientation="horizontal"
    android:columnCount="2"
    >
    <TextView android:text="Convertisseur de monnaies"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="25sp"
        android:layout_columnSpan="2"
        android:layout_marginTop="50dp"
        />
    <TextView
        android:layout_width="50dp" android:layout_height="wrap_content"
        android:text="USD :"
        android:layout_marginTop="10dp"
        />
    <EditText android:id="@+id/txtUSD"
        android:layout_width="200dp" android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:inputType="numberDecimal"
        android:hint="Dollars à convertir"
        />
    <TextView android:layout_width="50dp" android:layout_height="wrap_content"
        android:text="EUR :"
        android:layout_marginTop="10dp"
        />
    <EditText android:id="@+id/txtEUR"
        android:layout_width="200dp" android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:enabled="false"
        android:hint="Euros à convertir"
        />
    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Calcul"
        android:layout_marginTop="30dp"
        android:onClick="calculate"
        />
    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Quitter"
        android:layout_marginTop="30dp"
        android:onClick="quit"
        />
</GridLayout>